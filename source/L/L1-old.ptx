                        trig format plots = rad
                        ]		
                        \addplot[thick,smooth, samples=20, domain=-5:1] {x+2};
                        \addplot[thick,smooth, samples=20, domain=1:5] {-x -1};
                        \coordinate (a) at (1,3);
                        \coordinate (b) at (1,-2);
                      \end{axis}
                      \fill[white] (a) circle (0.1);
                      \draw (a) circle (0.1);

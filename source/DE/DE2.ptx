                        <ol marker="A." cols="2">
                            <li>
                                <p>
                                    <m>g'(x) = 0</m>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <m>g'(x) = \sin (x)</m>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <m>
                                        g'(x) = \cos (x)
                                    </m>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <m>
                                        g'(x) = -\cos (x)
